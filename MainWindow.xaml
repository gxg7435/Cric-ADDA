<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="Images/cricket.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <TextBlock  FontSize="30" HorizontalAlignment="Center" Margin="10" Foreground="White">Cric - Adda</TextBlock>
        <StackPanel Orientation="Vertical" Width="170" HorizontalAlignment="Right" VerticalAlignment="Center" >
            <Button Content="Players"  Margin="20,10,20,0" Click="BtnClick1" Background="White" BorderBrush="Black" BorderThickness="20"></Button>
            <Button Content="Upcoming Matches"  Margin="20,5,20,0" Click="btnclick2" Background="White" BorderBrush="Black" BorderThickness="20"></Button>
            <Button Content="Old Matches"  Margin="20,5,20,0" Click="Button_Click_1" Background="White" BorderBrush="Black" BorderThickness="20"></Button>
            <Button Content="Exit"  Margin="20,5,20,0" Click="Button_Click" Background="White" BorderBrush="Black" BorderThickness="20"></Button>
        </StackPanel>
        <Frame x:Name="Main"  >
        </Frame>
    </Grid>
</Window>
